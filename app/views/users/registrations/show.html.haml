.usersshowWrap
  = render partial: '/shareParts/header'
  .main
    .userInfo
      .userIcon
        = image_tag @user.photo.url, alt: '写真', class: 'userIcon__photo'
        = @user.nickname
      .row ライセンス
      .row 経験年数： #{@yearsOfExperience}
      .row 生息地: #{@user.prefecture.name}
      .comment
        = safe_join(@user.self_introduction.split("\n"),tag(:br))
      - if @user.id == current_user.id
        .edit_userInso
          = link_to 'Edit', edit_user_path, class: 'btn_common'

    .logs
      = render partial: '/logs/shareParts/log_container2', collection: @user_logs, as: 'log'
